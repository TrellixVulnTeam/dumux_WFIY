GXX_WARNING_OPTS=" \
    -Wall \
    -Wunused \
    -Wmissing-include-dirs \
    -Wcast-align \
    -Wno-sign-compare \
    -Wno-unused-parameter"

# additional -W flags for g++ which will lead to many warnings
#    -Wextra \
#    -Wfloat-equal \
#    -Wstrict-overflow \

GXX_OPTS=" \
    -fno-strict-aliasing \
    -fstrict-overflow \
    -fno-finite-math-only \
    -O3 \
    -march=native \
    -Wl,-rpath /cluster/tools/spack/opt/spack/linux-centos7-x86_64/gcc-7.2.0/hdf5-1.10.1-5zhgy3nytiap6rwcbpiovjvufdtzbmun/lib \
    -L /cluster/tools/spack/opt/spack/linux-centos7-x86_64/gcc-7.2.0/hdf5-1.10.1-5zhgy3nytiap6rwcbpiovjvufdtzbmun/lib \
    -DNDEBUG=1"

# configure flags
CMAKE_FLAGS=" \
  -DCMAKE_CXX_FLAGS=\"$GXX_WARNING_OPTS $GXX_OPTS\" \
  -DHDF5_C_COMPILER_EXECUTABLE=/cluster/tools/spack/opt/spack/linux-centos7-x86_64/gcc-7.2.0/hdf5-1.10.1-5zhgy3nytiap6rwcbpiovjvufdtzbmun/include/bin/h5pcc \
  -DHDF5_CXX_INCLUDE_DIR=/cluster/tools/spack/opt/spack/linux-centos7-x86_64/gcc-7.2.0/hdf5-1.10.1-5zhgy3nytiap6rwcbpiovjvufdtzbmun/include \
  "

