# Parameter file for test case 2pncmin.
# Everything behind a '#' is a comment.
# Type "./test_2pncmin --help" for more information.

[TimeLoop]
TEnd                    = 1e8                   # duration of the simulation [s]
DtInitial               = 1                     # initial time step size [s]
MaxTimeStepSize         = 50000                 # maximum time step size
EpisodeLength           = 100000

[Newton]
MaxRelativeShift        = 1e-8

[LinearSolver]
ResidualReduction       = 1e-20

[Grid]
Positions0              = 0 0.07
Positions1              = 0 0.15 0.16
Cells0                  = 14 #28
Cells1                  = 30 8 #60 8
Grading0                = 1.0
Grading1                = 1.0 -1.2

[FluidSystem]
NTemperature            = 100                   # [-] number of tabularization entries
NPressure               = 100                   # [-] number of tabularization entries
PressureLow             = 1e4                   # [Pa]low end for tabularization of fluid properties
PressureHigh            = 3e6                   # [Pa]high end for tabularization of fluid properties
TemperatureLow          = 273.15                # [K]low end for tabularization of fluid properties
TemperatureHigh         = 400.00                # [K]high end for tabularization of fluid properties

[Problem]
Name                    = salinization_16cm          # [-]  name for output files
Temperature             = 299.8                   # [K] temperature
InitialPressure         = 1.00e5                   # [Pa] Initial reservoir pressure
InitialGasSaturation    = 0.06                  # [-]  initial liquid saturation
InitialSalinity         = 2.00e-4                  # [-]=[kgNaCl/kgSolution]  Initial mass fraction
BottomPressure          = 1.00e5                   # [Pa]
BottomGasSaturation     = 0.025948705918491     # [-]  liquid saturation at top boundary
BottomSalinity          = 2.00e-4                  # [-]  NaCl mass frac of bottom liquid
BottomTemperature       = 299.8                   # [-] = [kgNaCl/kgSolution]  Mass fraction at bottom liquid

[FreeFlow]
RefMoleFracH2O          = 5.75e-3
BoundaryLayerThickness  = 1.3e-2 #0.005 #
MassTransferCoefficient = 1
RefTemperature          = 299.8

[SpatialParams]
SolubilityLimit         = 0.26 	                # [-]  solubility limit of salt in brine
referencePorosity       = 0.41656               # [-]  initial porosity
referencePermeability   = 1.0e-13
VGAlpha                 = 0.000152568361302
VGn                     = 13.79180
IrreducibleLiqSat       = 0.259009615906936
IrreducibleGasSat       = 0.025948705918491

[Vtk]
AddVelocity             = 1                     # Add extra information

[Output]
PlotFluidMatrixInteractions = true
