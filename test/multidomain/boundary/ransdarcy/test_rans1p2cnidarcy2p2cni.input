[TimeLoop]
DtInitial =  1e-1 # [s]
MaxTimeStepSize = 43200 # [s] (12 hours)
TEnd = 864000 # [s] (6 days)

[RANS.Grid]
Positions0 = -0.25 0.0 0.25 0.5
Positions1 = 0.25 0.5
Grading0 = 1.0 1.0 1.0
Grading1 = 1.5
Cells0 = 2 10 2
Cells1 = 15
Verbosity = true

[Darcy.Grid]
Positions0 = 0.0 0.25
Positions1 = 0.0 0.25
Cells0 = 10
Cells1 = 15
Grading0 = 1.0
Grading1 = -1.5
Verbosity = true

[RANS.Problem]
Name = rans
InletVelocity = 3.5 # [m/s]
InletPressure = 1e5 # [Pa]
InletMoleFrac = 0 # [-]
InletTemperature = 298.15 # [K]

[Darcy.Problem]
Name = darcy
Pressure = 1e5
Saturation = 0.95 # initial Sw
Temperature = 298.15 # [K]
InitPhasePresence = 3 # bothPhases

[Darcy.SpatialParams]
Porosity = 0.41
Permeability = 2.65e-10
AlphaBeaversJoseph = 1.0
Swr = 0.005
Snr = 0.01
VgAlpha = 6.371e-4
VgN = 6.9

[Problem]
Name = test_rans1p2cnidarcy2p2cni
EnableGravity = true
InterfaceDiffusionCoefficientAvg = FreeFlowOnly
PlotFluxes = true
PlotStorage = true

[Vtk]
AddVelocity = true
WriteFaceData = false

[Newton]
MaxSteps = 12
MaxRelativeShift = 1e-5

[Assembly]
NumericDifferenceMethod = 0
NumericDifference.BaseEpsilon = 1e-8
